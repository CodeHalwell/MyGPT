# MyGPT Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Required Configuration
# =============================================================================

# Flask application secret key (generate a secure random string)
FLASK_SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Database configuration
# For development (SQLite):
# DATABASE_URL=sqlite:///app.db
# For production (PostgreSQL):
DATABASE_URL=postgresql://username:password@localhost:5432/mygpt

# =============================================================================
# AI Provider API Keys (at least one required)
# =============================================================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude API Key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini API Key
GOOGLE_API_KEY=your-google-api-key-here

# Mistral AI API Key
MISTRAL_API_KEY=your-mistral-api-key-here

# =============================================================================
# Email Configuration (Optional - for user notifications)
# =============================================================================

# SendGrid API Key for email notifications
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Verified sender email address
VERIFIED_SENDER_EMAIL=noreply@yourdomain.com

# =============================================================================
# Application Configuration
# =============================================================================

# Flask environment (development, testing, production)
FLASK_ENV=development

# Application port
PORT=8000

# Admin email for initial admin user
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# Production Security Settings
# =============================================================================

# Set to True in production with HTTPS
SESSION_COOKIE_SECURE=False

# Set to True in production with HTTPS
WTF_CSRF_SSL_STRICT=False

# Session cookie settings
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# Optional Advanced Configuration
# =============================================================================

# Custom database pool settings (optional)
# SQLALCHEMY_ENGINE_OPTIONS={"pool_pre_ping": true, "pool_recycle": 300}

# Rate limiting (if using Flask-Limiter)
# RATELIMIT_STORAGE_URL=redis://localhost:6379

# Logging level
# LOG_LEVEL=INFO

# =============================================================================
# Development Only Settings
# =============================================================================

# Enable debug mode (NEVER in production)
# FLASK_DEBUG=True

# Disable CSRF protection for development (NEVER in production)
# WTF_CSRF_ENABLED=False